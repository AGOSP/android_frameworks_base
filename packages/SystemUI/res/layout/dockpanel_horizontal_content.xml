<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	      android:orientation="vertical"
	      android:clickable="true"
	      android:background="#FF000000"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content">
	<RelativeLayout android:id="@+id/ll_toolbox_header" android:background="#FF696969" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
		
		<Button android:id="@+id/prev_button"
			android:text="@string/prev_butt_text"
			android:textSize="20dip"
			android:background="@drawable/flipper_header_buttons"
			android:paddingLeft="20dip"
			android:paddingRight="20dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true">
		</Button>
		<TextView android:id="@+id/view_indic"
			android:text="@string/text_view_indic" 
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_toRightOf="@+id/prev_button"
			android:layout_toLeftOf="@+id/next_button"
			android:layout_centerInParent="true"
			android:gravity="center">
		</TextView>
		<Button android:id="@+id/next_button"
			android:text="@string/next_butt_text"
			android:textSize="20dip"
			android:background="@drawable/flipper_header_buttons"
			android:paddingLeft="20dip"
			android:paddingRight="20dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true">
		</Button>
			
	</RelativeLayout>
	
	<ViewFlipper android:id="@+id/toolbox_flipper"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
		<!--    Each added layout is a new view for the ViewFlipper   -->
        <include
        layout="@layout/layout_power_widgets"
        android:id="@+id/flipper_ll_widgets" />
        
        <include
        layout="@layout/layout_sound_media"
        android:id="@+id/flipper_ll_media" />
	      
	</ViewFlipper>
	
	<Button android:id="@+id/hide_button"
		android:text="@string/hide_butt_text"
		android:textSize="20dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:layout_alignParentBottom="true">
	</Button>	

</LinearLayout>
