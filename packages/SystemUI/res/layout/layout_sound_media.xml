<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="vertical"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:background="#00000000">
    <RelativeLayout android:id="@+id/relativeLayout1" android:layout_margin="10dip" android:layout_width="match_parent" android:layout_height="wrap_content">
         <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="15dip"
	        android:text="@string/text_volume_control"
	        android:id="@+id/divider_text_volume"
	        android:layout_marginLeft="10dip"
	        android:layout_alignParentTop="true">
        </TextView>
        
        <ImageView android:src="@drawable/divider"
	        android:layout_height="5dip"
	        android:layout_width="match_parent"
	        android:layout_marginBottom="10dip"
	        android:id="@+id/diviver_image_volume" 
	        android:layout_below="@+id/divider_text_volume">
        </ImageView>
        
        <TextView android:layout_alignParentLeft="true"
	        android:text="@string/text_media"
	        android:textSize="20dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/media_title"
	        android:layout_below="@+id/diviver_image_volume">
        </TextView>
        <SeekBar android:id="@+id/media_seekbar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/media_title"
	        android:layout_marginLeft="15dip"
	        android:layout_alignParentLeft="true">
        </SeekBar>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/relativeLayout2" android:layout_margin="10dip" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_alignParentLeft="true" 
	        android:text="@string/text_ringtone"
	        android:textSize="20dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/ringtone_title">
        </TextView>
        <SeekBar android:id="@+id/ringtone_seekbar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/ringtone_title"
	        android:layout_marginLeft="15dip"
	        android:layout_alignParentLeft="true">
        </SeekBar>
    </RelativeLayout>
    
    <RelativeLayout android:id="@+id/relativeLayout3" android:layout_margin="10dip" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="15dip"
	        android:text="@string/text_media_control"
	        android:id="@+id/divider_text_media"
	        android:layout_marginLeft="10dip"
	        android:layout_alignParentTop="true">
        </TextView>
        
        <ImageView android:src="@drawable/divider"
	        android:layout_height="5dip"
	        android:layout_width="match_parent"
	        android:layout_marginBottom="10dip"
	        android:id="@+id/diviver_image_media"
	        android:layout_below="@+id/divider_text_media">
        </ImageView>
        
        <LinearLayout android:id="@+id/linearLayout1" android:layout_below="@+id/diviver_image_media" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
	        <ImageButton android:src="@drawable/ic_media_previous"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight=".33"
		       	android:layout_marginLeft="15dip"
		        android:layout_marginRight="15dip"
		        android:id="@+id/imageView1">
	        </ImageButton>
	        <ImageButton android:src="@drawable/ic_media_play"
		         android:layout_width="0dp"
		         android:layout_height="wrap_content"
		         android:layout_weight=".33"
		         android:layout_marginLeft="15dip"
		         android:layout_marginRight="15dip"
		         android:id="@+id/imageView2">
	        </ImageButton>
	        <ImageButton android:src="@drawable/ic_media_next"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight=".33"
		        android:layout_marginLeft="15dip"
		        android:layout_marginRight="15dip"
		        android:id="@+id/imageView3">
	        </ImageButton>
        </LinearLayout>
    </RelativeLayout>
    
</LinearLayout>
